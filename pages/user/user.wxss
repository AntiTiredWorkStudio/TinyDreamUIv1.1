/* 个人中心板块--样式处理 */
.user .plate{
    width: 690rpx;
    position: absolute;
    top: 446rpx;
    border-radius: 20rpx;
    left: 30rpx;
}
.user .plate .user_title{
    font-size: 28rpx;
    margin-bottom: 14rpx;
}
.user .plate .user_title text{
    display: inline-block;
    width: 10rpx;
    height: 35rpx;
    background: #00d094;
    margin-right: 20rpx; 
}
/* 功能模块--样式处理 */
.user .plate .module{
    width: 100%;
    height: 542rpx;
    background: #fff;
    border-radius: 20rpx;
}
.user .plate .module .block{
    width: 229rpx;
    border-right:1rpx solid #eee;
    float: left;
    height: 180rpx;
    border-bottom: 1rpx solid #eee; 
    position: relative;
}
.user .plate .module .block.line{
    border-right: none;
}
.user .plate .module .block.bottom{
    border-bottom: none;
}
.user .plate .module .block .block_main{
    width: 100%;
    text-align: center;
}
.user .plate .module .block .block_main text{
    display: block;
    font-size: 24rpx;
    margin-top: 20rpx;
    text-align: center;
}
.user .plate .module .block .block_main .icon{
    width: 100%;
    margin-top: 30rpx;
}
.user .plate .module .block .block_main .icon_join{
    height: 66rpx;
    background: url(http://tdream.antit.top/image/join.png) no-repeat center center;
    background-size: 60rpx 66rpx;
}
.user .plate .module .block .block_main .icon_service{
    height: 68rpx;
    background: url(http://tdream.antit.top/image/server.png) no-repeat center center;
    background-size: 70rpx 68rpx;
}
.user .plate .module .block .block_main .icon_phone{
    height: 66rpx;
    background: url(http://tdream.antit.top/image/tele.png) no-repeat center center;
    background-size: 48rpx 66rpx;
}
.user .plate .module .block .block_main .icon_name{
    height: 64rpx;
    background: url(http://tdream.antit.top/image/identify.png) no-repeat center center;
    background-size: 83rpx 64rpx;
}
.user .plate .module .block .block_main .icon_notice{
    height: 66rpx;
    background: url(http://tdream.antit.top/image/notice.png) no-repeat center center;
    background-size: 66rpx 66rpx;
}
.user .plate .module .block .block_main .icon_cach{
    height: 61rpx;
    background: url(http://tdream.antit.top/image/contact.png) no-repeat center center;
    background-size: 61rpx 61rpx;
}
.user .plate .module .block .block_main .icon_feed{
    height: 62rpx;
    background: url(http://tdream.antit.top/image/suggest.png) no-repeat center center;
    background-size: 62rpx 62rpx;
}
.user .plate .module .block .block_main .icon_question{
    height: 63rpx;
    background: url(http://tdream.antit.top/image/question.png) no-repeat center center;
    background-size: 63rpx 63rpx;
}
