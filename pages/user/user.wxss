/* 个人中心样式表 */
page{
    background-color: #edf0f5;
}
.user{
    border-top: 1rpx solid #cccac9;
    min-height: 416rpx;
}
/* 用户头像--样式处理 */
.user .header{
    margin: 30rpx auto 0;
    width: 174rpx;
    height: 174rpx;
    border-radius: 50%;
    position: relative;
    z-index: 20rpx;
    box-shadow: 2rpx 0rpx 2rpx 2rpx #f1f1f1,-2rpx 0rpx 5rpx 2rpx #f1f1f1,0rpx 2rpx 5rpx 2rpx #f1f1f1,0 -2rpx 5rpx 2rpx #f1f1f1;
}
.user .header image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
/* 用户信息--样式处理 */
.user .user_info{
    width: 690rpx;
    height: 306rpx;
    background-color: #fff;
    position: absolute;
    z-index: -5;
    border-radius: 20rpx;
    top: 110rpx;
    left: 50%;
    transform: translateX(-50%);
}
.user .user_info .message{ 
    width: 578rpx;
    margin: 0 auto;
    margin-top: 107rpx;
}
.user .user_info .nickName{
    text-align: center;
    margin-bottom: 30rpx;
}
.user .user_info .message .dream_poolInfo{
    overflow: hidden;
}
.user .user_info .message .dream_poolInfo view.left,view.middle,view.right{
    float: left;
}
.user .user_info .message .dream_poolInfo view.left{
    margin-right: 30rpx; 
}
.user .user_info .message .dream_poolInfo view.middle{
    margin-left: 45rpx;
    margin-right: 45rpx;
}
.user .user_info .message .dream_poolInfo view.right{
    margin-right: 0;
    float: right;
}
.user .user_info .message .dream_poolInfo view .num{
    text-align: center;
    font-size: 46rpx;
    font-weight: bolder;
}
.user .user_info .message .dream_poolInfo view .tip{
    font-size: 24rpx;
    color: #999;
}
.user .user_info .message .dream_poolInfo view.line{
    float: left;
    width: 2rpx;
    height: 68rpx;
    background: #eee;
}

