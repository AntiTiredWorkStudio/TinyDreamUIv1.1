}
.mask .bg .title{
    width: 100%;
    position: absolute;
    top: 158rpx;
    left: 260rpx;
    font-size: 56rpx;
    color: #ffc057;
}
.mask .bg .tip{
    position: absolute;
    top: 260rpx;
    width: 500rpx;
    white-space: normal;
    font-size: 32rpx;
    color: #808080;
    left: 124rpx;
    text-align: center;
